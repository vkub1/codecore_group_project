<div class="row">

<% @facilities.each do |facility| %>
   
    <div class="col">
    
        <div class="card " style="width: 22rem" >

            <h4><%= facility.full_address%> </h4>
            <br>
            <div class="card-body">
                <h5>bookings:</h5>
                <ul>
                    <p><% facility.bookings.each do |booking| %></p>
                        <li> <%= "#{booking.course.title} booked_from #{booking.start_time} to #{booking.end_time}"%></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <br>
    </div>
<% end %> 
</div>


