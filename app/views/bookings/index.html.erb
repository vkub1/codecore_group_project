<% @courses.each do |course| %>
    <div class="container my-3 border border-black">
        <h1><%= course.title %></h1>
        <% course.bookings.each do |booking| %>
            <div class="card my-3">
                <% if course.bookings.length == 0 %>
                    You have not booked a facility for this course yet
                <% else %>
                    <% facility = Facility.find(booking.facility_id) %>
                    <h3>Facility Address<%= facility.full_address %></h3>
                    <h3>Booking Status: <%= booking.approved ? "approved":"pending"%></h3>
                    <hr>
                    <%= link_to "See facility details", facility_path(facility.id) %>
                    <% if booking.approved? %>
                        <%= link_to "Cancel Booking", course_booking_path, method: :delete, data:{confirm:"Are you sure you want to delete?"} %>
                    <% end %>
                <% end %>
            </div>
        <% end %>
    </div>
<% end %>