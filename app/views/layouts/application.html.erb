<!DOCTYPE html>
<html>
  <head>
    <title>CodecoreGroupProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css"/>
  </head>
  <body>

  <% if user_signed_in? %>
          Hello <%= current_user.full_name %>
          <%= link_to "Logout", session_path, method: :delete, data: {confirm: "Are you sure you want to logout?"} %>
          |
          <%if current_user.is_admin%>
            <%= link_to 'admin', admin_path %>
          <% end %>
          <%= link_to "Notifications", user_notifications_path(current_user.id) %>
          <span class="badge badge-danger"><%= current_user.notification_count %></span>

            <% else %>
            <%=  link_to  'Log in', new_session_path  %>
              |
            <%=  link_to  'Sign Up', new_user_path  %>
            <% end %>
          
    <script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

   <div class="container mt-3">
      <% if flash[:notice] %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= flash[:notice] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= flash[:alert] %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end%>
    </div>
    <%= yield %>
  </body>
</html>
